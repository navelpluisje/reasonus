{% css %}
{% include "styles/documentation-image-content.css" %}
{% endcss %}
<section class="image-content">
    {% js %}
    {% include "javascript/imagePopout.js" %}
    {% endjs %}
    {% css %}
    {% include "styles/image-popout.css" %}
    {% endcss %}
    <picture class="img-container">
        <img class="{{ block.Title | slugify }} popout" src="{{ block.Image }}" alt="{{ block.ImageAlt }}"/>
    </picture>
    <section class="content">
        {{ block.Content | pathPrefix | safe }}
        {% if block.Tabs | dump !== '[]' %}
            {% js %}
            {% include "javascript/tabs.js" %}
            {% endjs %}
            {% css %}
            {% include "macros/styles/tabs.macro.css" %}
            {% endcss %}
            {{ tabs(block.Tabs) }}
        {% endif %}
    </section>
    {% if block.Explanations | dump !== '[]' %}
        {% css %}
        {% include "macros/styles/explanation.macro.css" %}
        {% endcss %}
        <section class="extras">
            {% for extra in block.Explanations %}
                {{ explanation(extra.Title, extra.Content, extra.type) }}
            {% endfor %}
        </section>
    {% endif %}
</section>