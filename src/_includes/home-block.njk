<div class="home-block {{ item.Color | slugify }}">
    <article class="{{ item.Color | slugify }}">
        <header>
            <img src="{{ item.Image | url }}" alt="" class="image"/>
            <img src="{{ '/images/logo-only.svg' | url }}" alt="" class="logo"/>
        </header>
        <section class="content">
            <header>{{item.Title}}</header>
            <section>
                {{ item.Content | safe }}
            </section>
        </section>
    </article>
</div>