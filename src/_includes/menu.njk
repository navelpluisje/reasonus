{% js %}
{% include "javascript/smoothScroll.js" %}
{% endjs %}
{% css %}
{% include "styles/menu.css" %}
{% endcss %}
<aside class="menu">
  <nav>
    <ul>
      {% for item in menu %}
        {% if item.Slug === '/' %}
          {% set url = ['/', item.Type, '/'] | join | lower %}
        {% else %}
          {% set url = ['/', item.Type, '/', item.Slug, '/'] | join | lower %}
        {% endif %}
        <li class="main {{ item.Color | lower }} {{ 'active' if page.url === url }}">
          <a href="{{ url | lower }}">{{ item.Title }}</a>
        </li>
        <ul>
          {% for subItem in item.SubMenu %}
            <li class="sub {{ item.Color | lower }}">
              <a on:click="{handleAnchorClick}" href="#{{ subItem | slugify }}">
                {{ subItem }}
              </a>
            </li>
          {% endfor %}
        </ul>
      {% endfor %}
    </ul>
  </nav>
</aside>