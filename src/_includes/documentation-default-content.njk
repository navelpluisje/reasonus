{% css %}
{% include "styles/documentation-default-content.css" %}
{% endcss %}
<section class="default-content">
  <section class="content">
    {{ block.Content | pathPrefix | safe }}
    {% if block.Tabs | dump !== '[]' %}
      {% js %}
      {% include "javascript/tabs.js" %}
      {% endjs %}
      {% css %}
      {% include "styles/tabs.macro.css" %}
      {% endcss %}
      {{ tabs(block.Tabs) }}
    {% endif %}
  </section>
  {% if block.Explanations | dump !== '[]' %}
    {% css %}
    {% include "styles/explanation.macro.css" %}
    {% endcss %}
    <section class="extras">
      {% for extra in block.Explanations %}
        {{ explanation(extra.Title, extra.Content, extra.type) }}
      {% endfor %}
    </section>
  {% endif %}
</section>